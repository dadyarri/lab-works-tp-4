@using Microsoft.AspNetCore.Identity
@model List<Game>
@inject SignInManager<IdentityUser> SignInManager

<table class="table table-striped">
    <thead>
    <tr>
        <td>Название</td>
        <td>Разработчик</td>
        <td>Жанр</td>
        @if (User.IsInRole("Administrator"))
        {
            <td>Действия</td>
        }
    </tr>
    </thead>
    @foreach (var entity in Model)
    {
        <tr>
            <td>@entity.Title</td>
            <td>
                @entity.Developer.Name
            </td>
            <td>@entity.Genre</td>
            @if (User.IsInRole("Administrator"))
            {
                <td>

                    <div class="btn-group">
                        <a href="@Url.Action("Edit", "Home", new { id = entity.Id })" class="btn btn-primary">
                            <img src="https://img.icons8.com/ios/280/ffffff/edit" alt="edit" height="20">
                        </a>
                        <a href="@Url.Action("Delete", "Home", new { id = entity.Id })" class="btn btn-danger">
                            <img src="https://img.icons8.com/ios/280/ffffff/trash" alt="delete" height="20">
                        </a>
                    </div>

                </td>
            }
        </tr>
    }
</table>