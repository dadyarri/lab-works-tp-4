@page
@using Lab2.Models
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h2>Список игр</h2>
<form method="post">
    <table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Название</th>
            <th scope="col">Разработчик</th>
            <th scope="col">Жанр</th>
        </tr>
    </thead>
    <tr>
        <td>
            <input name="title"/><br />
            @Html.ValidationMessage("title")
        </td>
        <td>
            <input name="developer"/><br />
            @Html.ValidationMessage("developer")
        </td>
        <td>
            <input name="genre"/>
            <input type="submit" value="Сохранить" /><br />
            @Html.ValidationMessage("genre")
        </td>
    </tr>
        @foreach (Game game in Shelf.shelf)
       {
           <tr>
               <td>@game.Title</td>
               <td>@game.Developer</td>
               <td>@game.Genre</td>
           </tr>
       }
    </table>
</form>
